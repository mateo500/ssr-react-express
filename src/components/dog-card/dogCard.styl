.card
    max-width 320px
    border: 1px solid #dddddd
    border-radius: 8px
    position relative
    -webkit-box-shadow: 0px 0px 5px 5px rgba(227,227,227,1)
    -moz-box-shadow: 0px 0px 5px 5px rgba(227,227,227,1)
    box-shadow: 0px 0px 5px 5px rgba(227,227,227,1)

.card-title
    padding-left: 20px

.card-name
    padding-left: 15px

.card-subtitle
    padding-left: 15px


.card-image
    width: 100%
    max-height: 250px
    border-top-right-radius: 8px
    border-top-left-radius: 8px


.buttons-container
    display: flex
    justify-content: space-between
    margin: 20px


.like-button
    font-size: 14px

.save-button
    font-size: 14px