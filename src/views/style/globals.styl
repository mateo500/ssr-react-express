@import url('https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap')

html 
    position: relative
    min-height: 100%

body 
    margin: 0 0 
    padding: 0 0 120px
    font-family: 'Fredoka One', cursive
    letter-spacing: 1px
   


footer 
    background-color: orange
    position: absolute
    left: 0
    bottom: 0
    height: 100px
    width: 100%
    overflow: hidden

.cards-grid
  padding-top: 30px
  display: grid
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr))
  grid-gap: 15px
  object-fit: cover


.children-container
    margin: 25px